generator client {
  provider = "prisma-client-js"
  binaryTargets = "linux-musl-openssl-3.0.x"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @unique @default(uuid())
  name        String   @unique
  description String?
  categories  Category @relation(fields: [categoryId], references: [id])
  servers     Server   @relation(fields: [serverId], references: [id])
  permissions String[]
  commands    String[]
  price       Float
  promoPrice  Float?
  image       String?
  duration    Int?
  slug        String   @unique
  active      Boolean
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  categoryId  String
  serverId    String
}

model Category {
  id          String    @id @unique @default(uuid())
  name        String    @unique
  description String?
  image       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  Product     Product[]
}

model Server {
  id          String    @id @unique @default(uuid())
  name        String    @unique
  description String?
  image       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  Product     Product[]
}

model Invoice {
  id            String   @id @unique @default(uuid())
  productId     String
  status        String
  paymentMethod String
  amount        Float
  transactionId String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
